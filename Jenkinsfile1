pipeline {

    agent { label 'docker-slave-ssh' }
    stages {
        stage('Clone') {
              steps {
                //git branch: 'main',
                  //  url: 'https://github.com/OnStas/jenkins_test.git'
                script {
                    // GET
                    def get = new URL("https://api.github.com/repos/OnStas/jenkins_test/pulls").openConnection();
                    def getRC = get.getResponseCode();
                    //println(getRC);
                    if(getRC.equals(200)) {
                    def html =get.getInputStream().getText();
                    def Branch = html.split("ref\":")[1].split(',')[0];
                    println(Branch);
                    //sh 'git clone --branch $Branch https://github.com/OnStas/jenkins_test.gi'
                    //sh 'git checkout ${Branch}'
                    }
                    //sh 'git clone --branch $Branch https://github.com/OnStas/jenkins_test.gi'
                    //sh 'git checkout ${Branch}'
                }
               // sh 'printenv'
                  git branch: '$Branch',
                       url: 'https://github.com/OnStas/jenkins_test.git'
            }        
        }
        stage('Build') {
            steps {
              
                sh 'chmod +x jenkins_test/build.sh'
                sh './jenkins_test/build.sh 2>&1 | tee artifact.txt'
            }
        }
        stage('Test') {
            steps {
                sh 'chmod +x jenkins_test/test.sh'
                sh './jenkins_test/test.sh 2>&1 | tee test_result.txt' 
            }
        }                      
    }
    post {
        always {
            archiveArtifacts(artifacts: '**/jenkins_test/artifact.txt', followSymlinks: false)
        }
        failure {
            archiveArtifacts(artifacts: '**/jenkins_test/test_result.txt', followSymlinks: false)
        }
    }
}
